<br>
<div class="row">
	<div class="col-md-2 col-md-offset-1">
		<img src="/bundles/odiseoadscandy/img/avatar1.jpg" alt=""
			class="img-circle">
	</div>

	<div class="col-md-8">
		<div class="preorder new form_message">
			{% if form is defined %} {{ form_start(form , {'action':
			path('odiseo_message_send_to_vendor' ,{'id': product.id }), 'method':
			'POST'}) }} {{ form_errors(form) }} {% for flashMessage in
			app.session.flashbag.get('notice') %}
			<p class="sended">
				<i class="fa fa-check"></i> {{ flashMessage }}
			</p>
			{% endfor %} {% for flashMessage in app.session.flashbag.get('error')
			%}
			<p class="sended">
				<i class="fa fa-times"></i> {{ flashMessage }}
			</p>
			{% endfor %}
			<div class="row">
			{{ form_widget(form.body, {'attr': {'class':'form-control description', 'data-rule-required':'true'} }) }}
			 {{	form_row(form._token) }}</div>
			<br>
			<div class="row">{{ form_widget(form.enviar, {'attr': {'class':
				'button_drop'}}) }} {{ form_widget(form.ready, {'attr': {'class':
				'button_drop'}}) }}</div>
			{{ form_end(form ,{'render_rest': false}) }} {% endif %}
		</div>
	</div>
</div>