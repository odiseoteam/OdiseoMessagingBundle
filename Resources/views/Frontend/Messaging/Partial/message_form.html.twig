<div class="row message-form">
	<div class="col-xs-2 col-md-1 text-center">
		<a href="#" class="user-picture">
			<img src="{{ app.user.mainProfile and app.user.mainProfile.pictureName?app.user.mainProfile.pictureName|imagine_filter('user_picture'):asset('bundles/odiseouser/images/avatar.gif') }}" alt="" class="img-circle">
		</a>
	</div>
	<div class="col-xs-10">
		<form action="{{ path('odiseo_messaging_send', {'threadId': thread.id }) }}" class="odiseo_messaging_message" method="POST" enctype="multipart/form-data">
			{{ form_errors(form) }}
			{{ form_widget(form._token) }}
			{{ form_widget(form.body, {'attr': {'class': 'form-control description', 'data-rule-required':'true'} }) }}
			<div class="attachment clearfix">
				{{ form_label(form.mediaFile) }}
				<div class="col-lg-10">
					{{ form_widget(form.mediaFile, {'attr': {'class': 'form-control'} }) }}
				</div>
			</div>
			<br>
			{{ form_widget(form.enviar, {'attr':{'class':'button_drop pull-right'}}) }}
		</form>
	</div>
</div>